@model JobBoyBD.Models.ForgotPasswordMV

@{
    ViewBag.Title = "Forgot";
}

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="job-category-listing mb-50">
                <div class="col-md-12">
                    <h2 class="contact-title" align="center">Forgot Password</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                @using (Html.BeginForm("Forgot", "User", FormMethod.Post,
                    new
                    {
                        @class = "form-contact",
                        @novalidate = "novalidate"
                    }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control valid",
                                        @type = "text",
                                        @name = "Email",
                                        @id = "Email",
                                        @placeholder = "Enter Email Address",
                                        @onfocus = "this.placeholder = ''",
                                        @onblur = "this.placeholder = 'Enter Email Address'",
                                    }
                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-success" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Send Email" class="button boxed-btn" />
                    </div>
                }
            </div>
            <div class="col-md-6" style="padding:60px 0px 0px 60px">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Location</h3>
                        <p>
                            House 27, Road 8, Gulshan, Dhaka 1212, Bangladesh
                        </p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>Give us a call</h3>
                        <p>
                            +1 (412) 567-4498 <br>
                            +880 2 883 6411
                        </p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>Send us an email</h3>
                        <p>support@jobboybd.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
